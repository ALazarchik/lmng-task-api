{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "module": "commonjs",
        "target": "ES6",
        "moduleResolution": "node",
        "noEmit": true,
        "allowJs": true,
        "checkJs": true,
        "baseUrl": "./src",
        "strict": false,
        "paths": {},
        "skipLibCheck": true,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017",
            "ESNext"
        ],
        "types": [
            "chai",
            "node",
            "mocha"
        ]
    },
    "exclude": [
        "node_modules",
    ],
    "include": [
        "src/*"
    ]
}
